<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:theme="@style/translucetStatusThreme">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextInputLayout 演示"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="我这里是提示文字"
        app:hintAnimationEnabled="true">

        <EditText
            android:id="@+id/et_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="这是一个普通的 EditText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Material Design  EdiText" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/tv_md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="material design Editext"
        app:met_clearButton="true"
        app:met_errorColor="#ddaa00"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="10"
        app:met_primaryColor="?attr/colorPrimary"
        app:met_singleLineEllipsis="true" />


</LinearLayout>